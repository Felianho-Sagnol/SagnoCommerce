{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-secondary py-3 px-3">
                    <h1 class='text-center'>Connectez-vous !</h1>
                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue le mot de passe ou l'emaille  est incorrecte</div>
                    {% endif %}
                    <form action="{{path('user_login')}}" method = "post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" placeholder="Adresse email.." required name="_username" class="form-control" id="email" value="{{username}}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" required placeholder="Mot de passe ..." class="form-control">
                        </div>
                        <div>
                            <label class="form-group" for='remember_me'>
                                <input type="checkbox" id='remember_me' name="_remember_me"> <span class='ml-3'>Remember me</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success ml-5 mr-5">Connexion</button> 
                            <a class="btn btn-primary" href="{{path('user_inscription')}}">Pas de Compte ?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
